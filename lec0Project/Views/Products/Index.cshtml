@model IEnumerable<lec0Project.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create", null, new {@class= "btn btn-success fa fa-plus" })*@

    <a href="@Url.Action("Create", "Products")"><i class="glyphicon glyphicon-plus btn-lg">Add</i></a>
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
           

            <a href="@Url.Action("Edit","Products", new { id=item.ProductId})" >
                <i class="glyphicon glyphicon-edit btn-lg"></i>
            </a>

            @Html.ActionLink("Details", "Details", new { id=item.ProductId }, new { @class = "btn btn-primary"}) |

            <a class="btn btn-danger" onclick="return confirm('Are you sure')" href="@Url.Action("Delete","Products", new { id = item.ProductId}) " >Delete</a>
        </td>
    </tr>
}

</table>
